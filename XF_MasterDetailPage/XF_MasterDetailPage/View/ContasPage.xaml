<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF_MasterDetailPage.View.ContasPage"
             Title="Contas">

    <ListView x:Name="lvContas" ItemSelected="lvContas_ItemSeleted">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Nome}" Detail="{Binding Status}" TextColor="Black"/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    
</ContentPage>